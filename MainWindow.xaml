<Window x:Class="CarDealerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarDealerApp"
        mc:Ignorable="d"
        Title="Car Dealer" Height="600" Width="900">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Arquivo">
                <MenuItem Header="Sair" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <TabControl x:Name="MainTabs" Margin="8">
            <!-- Tabs generated at runtime -->
        </TabControl>
    </DockPanel>
</Window>
