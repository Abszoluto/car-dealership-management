<Window x:Class="CarDealerApp.Views.VehicleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Veículo" Height="600" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">

            <Label Content="Filial"/>
            <ComboBox ItemsSource="{Binding Filiais}"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="IdFilial"
                      SelectedValue="{Binding Veiculo.IdFilial}"/>

            <Label Content="Chassi"/>
            <TextBox Text="{Binding Veiculo.Chassi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Marca"/>
            <TextBox Text="{Binding Veiculo.Marca, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Modelo"/>
            <TextBox Text="{Binding Veiculo.Modelo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Ano do Modelo"/>
            <TextBox Text="{Binding Veiculo.AnoModelo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Valor"/>
            <TextBox Text="{Binding ValorTexto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Cor"/>
            <TextBox Text="{Binding Veiculo.Cor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Quilometragem"/>
            <TextBox Text="{Binding Veiculo.Quilometragem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Combustível"/>
            <TextBox Text="{Binding Veiculo.Combustivel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <!-- O status é definido programaticamente, então este campo fica oculto -->
            <Label Content="Status" Visibility="Collapsed"/>
            <ComboBox ItemsSource="{Binding StatusOptions}"
                      SelectedValue="{Binding Veiculo.Status, Mode=TwoWay}"
                      Visibility="Collapsed"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="OK" Width="80" Margin="4" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancelar" Width="80" Margin="4" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>