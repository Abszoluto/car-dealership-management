<UserControl x:Class="CarDealerApp.Views.SalesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:CarDealerApp.ViewModels">
    <UserControl.DataContext>
        <vm:SalesViewModel />
    </UserControl.DataContext>
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Nova Venda" Width="100" Margin="4" Command="{Binding CreateSaleCommand}" />
            <Button Content="Refresh" Width="80" Margin="4" Command="{Binding RefreshCommand}" />
        </StackPanel>
        <DataGrid ItemsSource="{Binding Vendas}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdVenda}" Width="60" />
                <DataGridTextColumn Header="Cliente" Binding="{Binding ClienteNome}" Width="200" />
                <DataGridTextColumn Header="VeÃ­culo" Binding="{Binding VeiculoInfo}" Width="250" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" />
                <DataGridTextColumn Header="Data Venda" Binding="{Binding DataVenda}" Width="160" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
