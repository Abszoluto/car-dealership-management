<Window x:Class="CarDealerApp.Views.FilialEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adicionar/Editar Filial" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Nome"/>
            <TextBox Text="{Binding Filial.Nome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="CNPJ"/>
            <TextBox Text="{Binding Filial.Cnpj, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Estado"/>
            <TextBox Text="{Binding Filial.Estado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Cidade"/>
            <TextBox Text="{Binding Filial.Cidade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Text="{Binding Filial.DataCriacao, Mode=OneWay}" IsReadOnly="True" Background="#f0f0f0"/>

        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="OK" Width="80" Margin="4" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancelar" Width="80" Margin="4" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
